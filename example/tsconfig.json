{
    "compilerOptions": {
        "target": "ESNext", // Use latest JS features
        "module": "ESNext", // Supports modern ES modules
        "moduleResolution": "node", // Ensures correct module imports
        "declaration": true, // Generates TypeScript declaration files (.d.ts)
        "declarationMap": true, // Allows debugging of .d.ts files
        "emitDeclarationOnly": false, // Compile TS to JS + declaration files
        "outDir": "dist", // Output compiled files to 'dist/'
        "strict": true, // Enables strict type checking
        "esModuleInterop": true, // Enables ES module interop with CommonJS
        "allowSyntheticDefaultImports": true, // Allows default imports for modules without them
        "resolveJsonModule": true, // Allows importing JSON files
        "skipLibCheck": true, // Speeds up compilation by skipping library type checking
        "jsx": "react-jsx", // Enables JSX support (for React 18)
        "lib": ["ESNext", "DOM"], // Supports latest JavaScript features & DOM APIs
        "types": ["node"], // Ensures Node.js module types are available
        "baseUrl": ".", // Needed for path alias to work
        "paths": {
            "floatify": ["../src"]
        }
    },
    "include": ["src"], // Only compile files in `src/`
    "exclude": ["node_modules", "dist", "example", "tests"] // Ignore these directories
}
